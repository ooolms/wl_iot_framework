{
	"$schema":"http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties":{
		"sensors":{
			"type": "array",
			"items":{
				"type": "object",
				"properties":{
					"name":{
						"type": "string"
					},
					"type":{
						"type": "string",
						"enum": ["single","single_lt","single_gt","text","packet","packet_lt","packet_gt"]
					},
					"timestamp":{
						"type": "string",
						"enum": ["no","local","global"]
					},
					"constraints":{
						"type": "object",
						"properties":{
							"*":{
								"type":"string"
							}
						}
					}
				},
				"required": ["name","type"]
			}
		}
	},
	"required": [
		"sensors"
	]
} 
